<?xml version="1.0"?>
<layout version="0.1.0">

	<default>
		<reference name="head">
			<block type="tmwidgets/tracking" name="tmwidgets_head" template="targetingmantra/tmwidgets/head.phtml"/>
		</reference>
         
		<reference name="before_body_end">
			<block type="tmwidgets/tracking" name="tmwidgets_tracking"
				template="targetingmantra/tmwidgets/tracking.phtml" />
				
			<block type="tmwidgets/widgets" name="tmwidgets_render"
				template="targetingmantra/tmwidgets/widgetrender.phtml" />
		</reference>
		
	</default>
	<!-- Product View Page -->
	<catalog_product_view>
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="-" template="targetingmantra/tmwidgets/widgets.phtml" />
		</reference>
		
	</catalog_product_view>

	<!-- Home Page -->
	<cms_index_index>
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="-" template="targetingmantra/tmwidgets/widgets.phtml" />
		</reference>
	</cms_index_index>

	<!-- Category View Page -->
	<catalog_category_view>
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="category.products" template="targetingmantra/tmwidgets/widgets.phtml" >
			</block>
		</reference>
	</catalog_category_view>

	<!-- View Shopping cart page -->
	<checkout_cart_index>
	
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="-" template="targetingmantra/tmwidgets/widgets.phtml" />
		</reference>
		<reference name="before_body_end">
			<block type="tmwidgets/tracking" name="tmwidgets_add_cart"
				template="targetingmantra/tmwidgets/tracking_cart.phtml" />
		</reference>
	</checkout_cart_index>

	<!-- Checkout Success Pages -->
	<checkout_onepage_success>
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="-" template="targetingmantra/tmwidgets/widgets.phtml" />
		</reference>
	</checkout_onepage_success>

	<checkout_multishipping_success>
		<reference name="content">
			<block type="tmwidgets/widgets" name="tmwidgets_widgets"
				after="-" template="targetingmantra/tmwidgets/widgets.phtml" />
		</reference>
	</checkout_multishipping_success>
</layout>
